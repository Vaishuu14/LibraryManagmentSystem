@{ 
    Layout = "/Views/Shared/_LayoutWithoutNavBar.cshtml";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Member Dashboard - Book List</title>
    <link rel="stylesheet" href="~/css/memberDashboard.css" />
    <script src="~/js/book.js" defer></script> <!-- Ensure book.js is loaded -->
     <script>
    document.addEventListener('DOMContentLoaded', function () {
        // Retrieve the username from local storage and display it
        const username = localStorage.getItem('username');
        if (username) {
            document.getElementById('welcomeMessage').innerText = `Welcome, ${username}!`;
        }
    });
</script>
</head>
<body>
    <div class="memberHeader">
    <h1>Member Dashboard</h1>
    <h5 id="welcomeMessage">Welcome!</h5>
    </div>

    <h3>Available Books</h3>
    
    <table>
        <thead>
            <tr>
                <th>Book Title</th>
                <th>Author</th>
                <th>ISBN</th>
                <th>Publication Date</th>
                <th>Available Copies</th>
            </tr>
        </thead>
        <tbody id="books"></tbody> <!-- This will be populated by book.js -->
    </table>
    <p id="counter"></p>

    <script>
        // Call to load books when the page is ready
        getBooks();

    </script>
    
</body>
</html>
